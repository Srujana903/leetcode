3427. Sum of Variable Length Subarrays
class Solution {
    public int subarraySum(int[] nums) {
        int n = nums.length;
        int ans = 0;
        for (int i = 0; i < n; i++) {
            int start = Math.max(0, i - nums[i]);
            int sum = 0;
            for (int j = start; j <= i; j++) {
                sum += nums[j];
            }
            ans += sum;
        }
        return ans;
    }
}
